@model ZenithWebSite.Models.Event

@{
    ViewData["Title"] = "Event Edition";
}

<h2>Editing Event</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        @*<h4>Event</h4>*@
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="EventId" />
        <div class="form-group">
            <label asp-for="ActivityId" class="control-label col-md-2"></label>
            <div class="col-md-10">
                @Html.DropDownList("ActivityId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ActivityId, "", new { @class = "text-danger" })
            @* -- *@
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FromTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FromTime" class="form-control" />
                <span asp-validation-for="FromTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="ToTime" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ToTime" class="form-control" />
                <span asp-validation-for="ToTime" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EnteredBy" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="EnteredBy" class="form-control" readonly />
                <span asp-validation-for="EnteredBy" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CreationDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="CreationDate" class="form-control" readonly />
                <span asp-validation-for="CreationDate" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
