@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Grant Role</h2>

<form asp-action="GrantRole">
    <input type="hidden" name="userId" value="@ViewBag.id" />
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label>Roles</label>
        <div class="form-group">
            <select name="roleId" class="form-control col-md-10">
                @foreach (var role in Model)
                {
                    <option value="@role.Id">@role.Name</option>
                }
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Grant Role" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>