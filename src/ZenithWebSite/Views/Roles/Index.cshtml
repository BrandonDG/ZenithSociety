@model IEnumerable<Microsoft.AspNetCore.Identity.EntityFrameworkCore.IdentityRole>

@{
    ViewData["Title"] = "Role Management";
}

<h2>Managing Roles</h2>

<p>
    <a asp-action="Create">Create Role</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>     
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var role in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
            <td>
                @if (!role.Name.Equals("Admin"))
                {
                <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
